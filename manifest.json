{
  "manifest_version": 2,

  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0",
  "default_locale": "en",

  "permissions": [
    "contextMenus"
  ],
  "icons": {
    "16": "icon_nuke_16.png",
    "128": "icon_nuke_128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*",
      "file:///*/*"],
      "js": ["content_script.js"],
      "css": ["content_styles.css"]
    }
  ],
  "background": {
    "scripts": [ "background.js"]
  }
}