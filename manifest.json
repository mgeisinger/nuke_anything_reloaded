{
  "manifest_version": 2,

  "name": "Nuke anything reloaded",
  "description": "Allows you to hide almost anything via context menu",
  "version": "0.9",

  "permissions": [
    "contextMenus"
  ],
  "icons": {
    "16": "icon_nuke_16.png",
    "128": "icon_nuke_128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*",
      "file:///*/*"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "scripts": [ "background.js"]
  }
}